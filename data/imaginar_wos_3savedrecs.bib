@article{ ISI:000222507500003,
Author = {Le Blanc, C},
Title = {{R. K. Narayan, Western misunderstanding of a literary
   ``decolonisation{''}}},
Journal = {{RLC-REVUE DE LITTERATURE COMPAREE}},
Year = {{2002}},
Volume = {{76}},
Number = {{3}},
Pages = {{323-342}},
Month = {{JUL-SEP}},
Abstract = {{In the present article at attempt is made to understand the reasons of
   the enthusiastic but biased reception in the English-speaking are of R.
   K. Narayan (1907-2001), the Indian writer celebrated by G. Greene and
   H. Miller for his vivid depiction of India, whose fantastic dimension
   was little understood. In comparison with Anglo-Indian literature, R.
   K. Narayan may appear realistic at first sight. Yet, set free from the
