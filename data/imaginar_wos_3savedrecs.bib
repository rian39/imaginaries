@article{ ISI:000222507400008,
Author = {Boisen, H},
Title = {{Hybridization as strategem of resistance in the work of Patrick
   Chamoiseau}},
Journal = {{RLC-REVUE DE LITTERATURE COMPAREE}},
Year = {{2002}},
Volume = {{76}},
Number = {{2}},
Pages = {{230-242}},
Month = {{APR-JUN}},
Abstract = {{Homi Bhabha defines hybridity as a process erupting on the basis of a
   discursive catachrestic point which reveals a disjunctive relation of
   time and space through the return of disavowed knowledge in the
   established discourse. In this process the authority of the sign is
   questioned through a negotiation of its `traditional' meaning. In his
   theoretical book Ecrire en pays domine (1997) ('Writing in a Dominated
   Country') Patrick Chamoiseau reflects on the importance of the
   imaginary which seems to constitute a priori the grounding of all
   cultural, economic and physical dominance and thus, the imaginary
   becomes the central battleground for his intellectual resistance. By
   making reference to some of Bhabha's central arguments, this reading of
   Chamoiseau's narration of a Martinican identity which resists the
   domination of the institutionalized narrations albeit without rejecting
   them, displays how Chamoiseau successfully generates a vacillation of
   the acknowledged meanings of concepts such as `freedom', `epistemology'
   or even the narrative `I'.}},
ISSN = {{0035-1466}},
Unique-ID = {{ISI:000222507400008}},
}

@article{ ISI:000225422600005,
Author = {Goodman, MK},
Title = {{Reading fair trade: political ecological imaginary and the moral
   economy of fair trade foods}},
Journal = {{POLITICAL GEOGRAPHY}},
Year = {{2004}},
Volume = {{23}},
Number = {{7}},
Pages = {{891-915}},
Month = {{SEP}},
Abstract = {{This paper begins to explore the changing political geographies of
   alternative development as practiced and envisioned in the global
   South. Looking specifically at the growing movement and market for fair
   trade foods, this form of alternative development has become the moral
   business of latte drinkers and other reflexive consumers in Europe and
   the US. Fair trade attempts to reconnect producers and consumers
   economically, politically, and psychologically through the creation of
   a transnational moral economy. This re-connection is accomplished
   through material and semiotic commoditization processes that produce
   fair trade commodities. The semiotic production of these commodities
   and their traffic in particular `political ecological imaginaries' is
   essential to the formation of ethical production-consumption links,
   acting to also politicize consumption and fair trade eaters. Fair
   trade's moral economy rides the tension between the ethical
   relationships it fosters and the need for the wily characteristics of
   enterprise in the construction of transnational trade networks.
   Bringing recent work on moral geography to bear, constructing this
   moral economy is an attempt to facilitate a sense of `solidarity in
   difference' in the experiences of global economic inequalities between
   North and South and growers and eaters. At the same time, fair trade
   networks look to produce an expansive `spatial dynamics of concern' in
   the fashioning of ethical places of production and consumption. The
   paper concludes with a brief discussion of the continuing dilemmas
   critical for fair trade and suggestions for further empirical study of
   fair trade provisioning and alternative development networks. (C) 2004
   Elsevier Ltd. All rights reserved.}},
DOI = {{10.1016/j.polgeo.2004.05.013}},
ISSN = {{0962-6298}},
Unique-ID = {{ISI:000225422600005}},
}

